<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="v" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.radixsort.RadixSortVisualizer">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="currentNumber" />
   <Label fx:id="sortInfo" />
   <Group fx:id="rectangles" />
   <TextField fx:id="userInput" promptText="Enter a number of integers" />
    <Button onAction="#startClick" text="Start/Reset" />
   <Button mnemonicParsing="false" onAction="#pauseClick" text="Pause/Play" />
</VBox>
